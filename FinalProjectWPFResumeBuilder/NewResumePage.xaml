<Window x:Class="FinalProjectWPFResumeBuilder.NewResumePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalProjectWPFResumeBuilder"
        mc:Ignorable="d"
        Title="NewResumePage" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="3" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Button Content="Edit" Grid.Row="0" Grid.Column="0" />
        <Button Content="View" Grid.Row="0" Grid.Column="1" />
        <Button Content="Export to PDF" Grid.Row="0" Grid.Column="2"/>


        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">Resume Title</TextBox>

        <StackPanel Grid.Row="2" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="2">
            <DataGrid x:Name="CategoriesDataGrid" SelectionChanged="CategoriesDataGrid_SelectionChnaged" />
        </StackPanel>
        
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical">
            <Button Content="Add" Click="AddData_Click"/>
            <Button Content="Edit" Click="EditData_Click"/>
            <Button Content="Delete" Click="DeleteData_Click"/>
        </StackPanel>

        
        <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Vertical">
            <Button Content="Add" Click="AddData_Click"/>
            <Button Content="Edit" Click="EditData_Click"/>
            <Button Content="Delete" Click="DeleteData_Click"/>
        </StackPanel>


        <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Vertical">
            <Button Content="Add" Click="AddData_Click"/>
            <Button Content="Edit" Click="EditData_Click"/>
            <Button Content="Delete" Click="DeleteData_Click"/>
        </StackPanel>

        <Button Content="Add New Category" Grid.Row="5" Grid.Column="0" Click="AddNewCategory_Click"/>

        <Button Content="Save Resume" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Click="SaveResume_Click" />
    </Grid>
</Window>

